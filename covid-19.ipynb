import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import pandas as pd
import datetime
import sys

hoy     = datetime.date.today()
undia   = datetime.timedelta(days=1)
fichero = hoy.strftime("%Y-%m-%d") 

# Configuración visualización
%matplotlib inline
sns.set()
sns.set(style='whitegrid')

plt.clf()
plt.cla()
